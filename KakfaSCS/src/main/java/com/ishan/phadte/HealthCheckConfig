package com.ishan.phadte;

import org.springframework.boot.CommandLineRunner;
import org.springframework.context.annotation.Bean;
import org.springframework.context.annotation.Configuration;
import org.springframework.boot.actuate.health.Health;
import org.springframework.boot.actuate.health.HealthIndicator;
import org.springframework.stereotype.Component;

// Configuration class for defining beans
@Component
public class HealthCheckConfig {

    @Bean
    public HealthIndicator customHealthIndicator() {
        return () -> Health.up().withDetail("status", "Application is healthy").build();
    }

    @Bean
    public CommandLineRunner healthCheckRunner(HealthIndicator healthIndicator) {
        return args -> {
            // Get health status from the HealthIndicator
            System.out.println("Health Check: ");
            Health health = healthIndicator.health();
            System.out.println("Health Check: " + health.getStatus());
            health.getDetails().forEach((key, value) -> System.out.println(key + ": " + value));
        };
    }

    @PostConstruct
    public void postConstruct() {
        System.out.println("PostConstruct method called after bean initialization");
    }
}
